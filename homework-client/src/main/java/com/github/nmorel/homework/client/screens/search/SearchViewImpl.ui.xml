<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:c="urn:import:com.google.gwt.user.cellview.client" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
  xmlns:h="urn:import:com.github.nmorel.homework.client.ui">
  <ui:style>
    
  </ui:style>

  <ui:with type="com.github.nmorel.homework.client.resources.messages.Messages" field="mess" />
  <ui:with type="com.github.nmorel.homework.client.resources.ResourcesBundle" field="res" />

  <g:DockLayoutPanel unit='PX'>
  
    <!-- Filter/Sort panel -->
    <g:east size="180">
      <g:HTMLPanel>
        <!-- Empty -->
      </g:HTMLPanel>
    </g:east>

    <g:center>
    
      <!-- Main Panel -->
      <g:DockLayoutPanel unit='PX' addStyleNames='{res.style.searchContainer}'>

        <g:north size='90'>
          <g:HTMLPanel ui:field='searchPanel' addStyleNames='{res.style.searchFormContainer}'>
            <h4>
              <ui:text from='{mess.searchTitle}' />
            </h4>
            <b:InputAddOn addStyleNames='input-append'>
              <b:TextBox ui:field='keyword' debugId='searchKeyword' />
              <b:Button ui:field='search' debugId='searchButton' icon='SEARCH' />
            </b:InputAddOn>
          </g:HTMLPanel>
        </g:north>

        <g:center>
          <g:DeckLayoutPanel ui:field='resultContainer'>
            <h:LoadingWidget loadingText='{mess.searchLoading}' />
            <g:HTMLPanel>
              <h5>
                <ui:text from='{mess.searchNoResult}' />
              </h5>
            </g:HTMLPanel>
            <g:ScrollPanel>
              <c:CellList ui:field='resultList'></c:CellList>
            </g:ScrollPanel>
          </g:DeckLayoutPanel>
        </g:center>

      </g:DockLayoutPanel>
      
    </g:center>
    
  </g:DockLayoutPanel>

</ui:UiBinder>