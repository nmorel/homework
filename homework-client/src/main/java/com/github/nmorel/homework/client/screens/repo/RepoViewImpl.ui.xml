<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:c="urn:import:com.google.gwt.user.cellview.client" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
  xmlns:t="urn:import:com.github.nmorel.homework.client.ui.timeline">

  <ui:with type="com.github.nmorel.homework.client.resources.messages.Messages" field="mess" />
  <ui:with type="com.github.nmorel.homework.client.resources.ResourcesBundle" field="res" />

  <g:DockLayoutPanel unit='PX'>

    <g:east size="200">
      <g:DockLayoutPanel unit='PX' addStyleNames='{res.style.repoCollaboratorsContainer}'>
        <g:north size='28'>
          <g:HTMLPanel addStyleNames='{res.style.repoCollaboratorsTitleContainer}'>
            <h3 class='{res.style.repoCollaboratorsTitle}'>
              <ui:text from='{mess.repoCollaborators}' />
            </h3>
          </g:HTMLPanel>
        </g:north>
        <g:center>
          <g:ScrollPanel addStyleNames='res.style.repoCollaboratorsScroll}'>
            <c:CellList ui:field='collaboratorsList' />
          </g:ScrollPanel>
        </g:center>
      </g:DockLayoutPanel>
    </g:east>

    <g:north size='100'>
      <g:HorizontalPanel>
        <g:HTMLPanel>
          <h2 ui:field='repoTitle'>Title</h2>
        </g:HTMLPanel>
        <g:HTMLPanel ui:field='buttonBar' />
      </g:HorizontalPanel>
    </g:north>

    <g:center>
      <g:TabLayoutPanel barUnit='PX' barHeight='30' ui:field='tabPanel'>
        <g:tab>
          <g:header>Commits</g:header>
          <t:CommitsTimeline ui:field='commitsTimeline' />
        </g:tab>
        <g:tab>
          <g:header>Collaborator's impact</g:header>
          <g:Label>TODO</g:Label>
        </g:tab>
      </g:TabLayoutPanel>
    </g:center>

  </g:DockLayoutPanel>

</ui:UiBinder>