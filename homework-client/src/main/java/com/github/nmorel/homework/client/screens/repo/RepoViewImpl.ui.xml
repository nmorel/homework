<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:c="urn:import:com.google.gwt.user.cellview.client" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
  xmlns:t="urn:import:com.github.nmorel.homework.client.ui.repo.commits" xmlns:collaborators="urn:import:com.github.nmorel.homework.client.ui.repo.collaborators">

  <ui:with type="com.github.nmorel.homework.client.resources.messages.Messages" field="mess" />
  <ui:with type="com.github.nmorel.homework.client.resources.ResourcesBundle" field="res" />

  <g:DockLayoutPanel unit='PX'>

    <g:east size="180">
      <g:DockLayoutPanel unit='PX' addStyleNames='{res.style.repoCollaboratorsContainer}'>
        <g:north size='25'>
          <g:HTMLPanel addStyleNames='{res.style.repoCollaboratorsTitleContainer}'>
            <h6 class='{res.style.repoCollaboratorsTitle}'>
              <ui:text from='{mess.repoCollaborators}' />
            </h6>
          </g:HTMLPanel>
        </g:north>
        <g:center>
          <g:ScrollPanel addStyleNames='res.style.repoCollaboratorsScroll}'>
            <c:CellList ui:field='collaboratorsList' />
          </g:ScrollPanel>
        </g:center>
      </g:DockLayoutPanel>
    </g:east>

    <g:center>

      <g:LayoutPanel addStyleNames='{res.style.repoContainer}'>

        <g:layer left='5px' right='5px' top='0' bottom='0'>

          <g:DockLayoutPanel unit='PX'>

            <g:north size='100'>
              <g:HorizontalPanel>
                <b:Heading size='4' ui:field='repoTitle' />
                <g:HTMLPanel ui:field='buttonBar' />
              </g:HorizontalPanel>
            </g:north>

            <g:center>
              <g:TabLayoutPanel barUnit='PX' barHeight='38' ui:field='tabPanel'>
                <g:tab>
                  <g:header>
                    <ui:text from='{mess.repoCommitsTab}' />
                  </g:header>
                  <t:CommitsTimeline ui:field='commitsTimeline' />
                </g:tab>
                <g:tab>
                  <g:header>
                    <ui:text from='{mess.repoCollabImpactTab}' />
                  </g:header>
                  <collaborators:CollaboratorsImpactChart ui:field='collaboratorsImpactChart' />
                </g:tab>
              </g:TabLayoutPanel>
            </g:center>

          </g:DockLayoutPanel>

        </g:layer>

      </g:LayoutPanel>

    </g:center>

  </g:DockLayoutPanel>

</ui:UiBinder>