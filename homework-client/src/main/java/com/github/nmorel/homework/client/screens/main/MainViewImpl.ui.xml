<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <ui:style>
    
  </ui:style>

  <ui:with type="com.github.nmorel.homework.client.resources.messages.Messages" field="mess" />
  <ui:with type="com.github.nmorel.homework.client.resources.ResourcesBundle" field="res" />

  <g:DockLayoutPanel unit="PX">
    <g:north size="35">
      <g:HTMLPanel addStyleNames='{res.style.headerPanel}'>
        <table style='width: 100%; height: 100%; padding: 0px 20px;'>
          <tbody>
            <tr>
              <td valign='middle'>
                <span class='{res.style.headerTitle}'>
                  <ui:text from='{mess.headerTitle}' />
                </span>
              </td>
              <td valign='middle'>
                <g:TextBox ui:field='keyword' debugId='headerSearchKeyword' />
              </td>
              <td align='right' style='width: 100%;'>
                <g:SimplePanel ui:field='loginPanel' />
              </td>
            </tr>
          </tbody>
        </table>
      </g:HTMLPanel>
    </g:north>

    <g:west size="150">
      <g:HTMLPanel addStyleNames='{res.style.westPanel}'></g:HTMLPanel>
    </g:west>

    <g:center>
      <g:SimpleLayoutPanel addStyleNames='{res.style.contentPanel}' ui:field='container' />
    </g:center>

  </g:DockLayoutPanel>
</ui:UiBinder>