<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

  <ui:style type='com.github.nmorel.homework.client.ui.LoadingWidget.LoadingStyle'>
    .progress {
    	position: absolute;
    	top: 30px;
    	height: 20px;
    	left: 12.5%;
    	width: 75%;
    }
    
    .progressCenter {
    	position: absolute;
    	top: 50%;
    	margin-top: -10px;
    	height: 20px;
    	left: 12.5%;
    	width: 75%;
    }
  </ui:style>

  <g:HTMLPanel>
    <div class='{style.progress}' ui:field='progressContainer'>
      <b:ProgressBar type='ANIMATED' percent='100' ui:field='progressBar' />
    </div>
  </g:HTMLPanel>
</ui:UiBinder> 